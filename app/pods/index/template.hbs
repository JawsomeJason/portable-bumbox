<div class="album__list">
  {{#each model as |album|}}
    <div class="album">
      {{#link-to 'album' album}}<img src="{{album.artwork}}">{{/link-to}}
      <p class="album__name">{{album.name}}</p>
      <p class="album__artist">{{album.artist}}</p>
      <p class="song-count">
        {{album.songCount}} songs
        {{#if album.isExplicit}}
          <span class="album__explicit">EXPLICIT</span>
        {{/if}}
      </p>
    </div>
  {{/each}}
</div>
